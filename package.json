{
  "name": "goatchain-production",
  "version": "1.0.0",
  "description": "Production-grade GoatChain blockchain with artist coin capabilities",
  "main": "production-start.js",
  "scripts": {
    "start": "node production-start.js",
    "dev": "nodemon production-start.js",
    "test": "npx hardhat test",
    "deploy": "npx hardhat run scripts/deploy-production.js --network localhost",
    "compile": "npx hardhat compile",
    "node": "npx hardhat node --hostname 0.0.0.0 --port 8545",
    "clean": "npx hardhat clean",
    "size": "npx hardhat size-contracts",
    "verify": "npx hardhat verify --network localhost",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "docker:build": "docker build -t goatchain-production .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js",
    "migrate": "node scripts/migrate.js",
    "monitor": "node scripts/monitor.js",
    "health": "curl -f http://localhost:8080/health || exit 1",
    "metrics": "curl -s http://localhost:8080/metrics",
    "logs": "tail -f logs/goatchain.log",
    "setup": "npm install && npm run compile",
    "production:start": "NODE_ENV=production pm2 start ecosystem.config.js",
    "production:stop": "pm2 stop goatchain-production",
    "production:restart": "pm2 restart goatchain-production",
    "production:logs": "pm2 logs goatchain-production",
    "production:monitor": "pm2 monit",
    "scale:up": "node scripts/scale-up.js",
    "scale:down": "node scripts/scale-down.js",
    "emergency:stop": "node scripts/emergency-stop.js"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "defi",
    "artist-coins",
    "staking",
    "nft",
    "production",
    "enterprise"
  ],
  "author": "GoatFundr Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "express-rate-limit": "^6.10.0",
    "prom-client": "^14.2.0",
    "dotenv": "^16.3.1",
    "web3": "^4.1.1",
    "ethers": "^5.7.2",
    "redis": "^4.6.7",
    "pg": "^8.11.1",
    "node-cron": "^3.0.2",
    "winston": "^3.10.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.2",
    "axios": "^1.4.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "swagger-ui-express": "^5.0.0",
    "nodemailer": "^6.9.3",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@typechain/hardhat": "^6.1.6",
    "@typechain/ethers-v5": "^10.2.1",
    "@types/node": "^20.4.5",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "hardhat": "^2.17.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.2",
    "typechain": "^8.3.1",
    "typescript": "^5.1.6",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.1.3",
    "nodemon": "^3.0.1",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "solhint": "^3.6.2",
    "solidity-docgen": "^0.6.0-beta.35"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GoatFoundr/GoatChain.git"
  },
  "bugs": {
    "url": "https://github.com/GoatFoundr/GoatChain/issues"
  },
  "homepage": "https://goatfundr.com",
  "config": {
    "production": {
      "port": 8545,
      "host": "0.0.0.0",
      "chainId": 999191917,
      "networkName": "GoatChain",
      "maxPeers": 100,
      "cacheSize": 4096,
      "logLevel": "info",
      "enableMetrics": true,
      "enableHealthCheck": true,
      "backupEnabled": true,
      "backupInterval": 3600
    }
  },
  "funding": {
    "type": "individual",
    "url": "https://goatfundr.com/donate"
  }
} 